/* src/pages/city/city.wxss */
page{
  width: 100%;
  height: 100%;
}
.wrap{
  width: 100%;
  height: 100%;
  background-color: rgb(243, 243, 243);
}
.wrap .content{
  width: 100%;
  height: 100%;
}
.wrap .content .sec-1{
  width: 100%;
  height:100rpx;
  background-color: white;
  padding-top: 15rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgb(243, 243, 243) ;
}
.wrap .content .sec-1 .inner{
  width: 90%;
   height: 70rpx;
   background-color: rgb(243, 243, 243);
   border-radius: 35rpx;
   margin: 0 auto;
   vertical-align: middle;
   line-height: 70rpx;
}
.wrap .content .sec-1 .inner .search-icon{
  display: inline-block;
  margin:0 20rpx;
}
.wrap .content .sec-1 .inner .city-input{
  display: inline-block;
  /* margin:0 20rpx; */
  vertical-align: middle;
  font-size: 24rpx;
  margin-left: 20rpx;
  width: 500rpx;
}
.wrap .content .sec-1 .inner .close{
  float: right;
  margin-top: 10rpx;
  margin-right: 20rpx;
}
/* --------------------------------------------sec-2---------------------------------------------------- */
.wrap .content .sec-2{
  width: 100%;
  height: calc(100% - 250rpx);
}