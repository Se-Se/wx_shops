/* pages/order/order.wxss */

@import"../../assets/wxss/order.wxss";

.info {
    position: absolute;
    right: 0;
    width: 100%;
    height: 100%;
    text-align: center;
    padding-top: 18rpx;
}

.info .up {
    font-weight: bold;
    position: relative;
}

.info .up .tag {
    position: absolute;
    top: 10rpx;
    left: 142rpx;
    font-weight: normal;
    height: 22rpx;
    line-height: 22rpx;
    width: 38rpx;
    color: rgb(190, 16, 16);
    border: 1rpx solid rgb(190, 16, 16);
    font-size: 16rpx;
}

.info .down {
    width: 100%;
    margin-top: 12rpx;
    font-size: 20rpx;
    letter-spacing: 3rpx;
    color: rgb(63, 63, 63);
}

.info .down view {
    float: left;
}

.info .down view:first-child {
    margin-left: 124rpx;
    border-right: 1rpx solid rgb(63, 63, 63);
    padding-right: 10rpx;
}

.info .down view:last-child {
    margin-left: 10rpx;
}

/* ----------------------------------------------order-container-sec_2---------------------------------------------------------------- */

.order-container-sec_2 {
    width: 94%;
    height: 200rpx;
    margin: 32rpx auto;
    box-shadow: 0rpx 0rpx 10rpx 10rpx rgb(223, 220, 220);
    border-radius: 10rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.order-container-sec_2 .up {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
}

.order-container-sec_2 .down {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    border-top: 1rpx solid rgb(223, 220, 220);
}

.order-container-sec_2 .inner view {
    height: 100%;
    line-height: 100rpx;
    text-align: center;
    font-size: 20rpx;
    font-weight: bold;
    letter-spacing: 1rpx;
}

.order-container-sec_2 .inner .r {
    color: rgb(63, 63, 63);
    font-weight: normal;
}
.order-container-sec_2 .down .phone-input {
    height: 100rpx;
    line-height: 100rpx;
    float: left;
    text-align: right;
}
.order-container-sec_2 .inner iconfont {
    margin-top: 38rpx;
    margin-left: 10rpx;
}

/* ----------------------------------------------order-container-sec_3---------------------------------------------------------------- */

.order-container-sec_3 {
    box-shadow: 0rpx 0rpx 10rpx 10rpx rgb(223, 220, 220);
    border-radius: 10rpx;
    padding: 20rpx;
    width: 94%;
    margin: 32rpx auto;
    box-sizing: border-box;
    text-align: center;
    font-size: 20rpx;
    letter-spacing: 1rpx;
}

.order-container-sec_3 .title {
    text-align: left;
    font-weight: bold;
}

.order-container-sec_3 .detail {
    border-bottom: 1rpx solid rgb(223, 220, 220);
}

.order-container-sec_3 .detail-inner {
    display: flex;
    flex-direction: column;
    color: rgb(63, 63, 63);
    font-weight: normal;
}

.order-container-sec_3 .detail-inner .inner-item {
    margin-top: 20rpx;
}

.order-container-sec_3 .detail-inner .inner-item .left {
    float: left;
}

.order-container-sec_3 .detail-inner .inner-item .right {
    float: right;
    display: flex;
}

.order-container-sec_3 .detail-inner .inner-item .right .num {
    margin-right: 100rpx;
}

.order-container-sec_3 .detail-inner .inner-item .right .price {
    font-weight: bold;
}

.order-container-sec_3 .total {
    text-align: end;
    width: 100%;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
}

.order-container-sec_3 .total .t-price {
    font-weight: bold;
    font-size: 30rpx;
}

.order-container-sec_3 .total .left {
    margin-right: 16rpx;
}

.order-container-sec_3 .recommend {
    padding: 20rpx 0;
    border-bottom: 1rpx solid rgb(223, 220, 220);
}

.order-container-sec_3 .recommend .title .price {
    color: rgb(248, 137, 104);
}

.order-container-sec_3 .recommend .recommend-inner {
    display: flex;
    flex-direction: column;
}

.order-container-sec_3 .recommend .recommend-inner .inner-item {
    margin-top: 30rpx;
    height: 60rpx
}

.order-container-sec_3 .recommend .recommend-inner .inner-item .left {
    float: left;
    height: 100%;
}

.order-container-sec_3 .recommend .recommend-inner .inner-item .left .pic {
    width: 60rpx;
    height: 60rpx;
    float: left;
}

.order-container-sec_3 .recommend .recommend-inner .inner-item .left .pic image {
    width: 100%;
    height: 100%;
}

.order-container-sec_3 .recommend .recommend-inner .inner-item .left .name {
    word-break: keep-all;
    margin-left: 80rpx;
    height: 100%;
    line-height: 60rpx;
}

.order-container-sec_3 .recommend .recommend-inner .inner-item .right {
    float: right;
}

.order-container-sec_3 .recommend .recommend-inner .inner-item .right .price {
    display: inline-block;
    color: #a30a0a;
    font-size: 24rpx;
    font-weight: 550;
}

.order-container-sec_3 .recommend .recommend-inner .inner-item .right .price span:first-child {
    color: #a7a7a7;
    text-decoration: line-through;
    font-size: 16rpx;
}

.order-container-sec_3 .recommend .recommend-inner .inner-item .right .chose {
    display: inline-block;
}

.order-container-sec_3 .recommend .recommend-inner .inner-item .right .chose radio {
    transform: scale(0.7);
}

.order-container-sec_3 .recommend .r-footer {
    margin-top: 20rpx;
    color: rgb(63, 63, 63);
    font-weight: normal;
}

.order-container-sec_3 .recommend .r-footer .t-price {
    color: black;
}

.order-container-sec_3 .recommend .r-footer .count {
    margin-right: 10rpx;
}

.order-container-sec_3 .recommend .r-footer .sec_3_icon {
    position: absolute;
}

.order-container-sec_3 .recommend .r-footer .up_arrow {
    transform: rotate(180deg);
}

.order-container-sec_3 .recommend .r-footer .show-more {
    position: relative;
    display: inline-block
}

.order-container-sec_3 .advert {
    padding: 20rpx 0;
    display: flex;
    justify-content: space-between;
    background-color: #353330;
    color: white;
    margin-top: 20rpx;

}

.order-container-sec_3 .advert .left {
    display: inline-block;
    margin-left: 10rpx;
}

.order-container-sec_3 .advert .left .name {
    color: rgb(255, 212, 71);
}

.order-container-sec_3 .advert .right .text,
.chose {
    float: right;
}

.order-container-sec_3 .advert .right .chose radio {
    transform: scale(0.7);
    color: rgb(255, 239, 204);
    /* border: 1rpx solid red;
    background-color: rgba(255, 255, 255,0); */
}

.order-container-sec_3 .advert .right .text .buy_notice {
    text-decoration-line: underline;
    font-size: 16rpx;
    margin-top: 10rpx;
}

.order-container-sec_3 .v-tick {
    margin-top: 20rpx;
    border-top: 1rpx solid rgb(223, 220, 220);
    padding: 20rpx 10rpx 0rpx 10rpx;
    text-align: left;
}

.order-container-sec_3 .v-tick .left {
    display: inline-block;
    width: 500rpx;
    text-align: left;
}

.order-container-sec_3 .v-tick .right {
    text-align: right;
    float: right;
}

.order-container-sec_3 .v-tick .right {
    transform: scale(0.7);
}

/* ----------------------------------------------order-container-sec_4---------------------------------------------------------------- */
.order-container-sec_4 {
    box-shadow: 0rpx 0rpx 10rpx 10rpx rgb(223, 220, 220);
    border-radius: 10rpx;
